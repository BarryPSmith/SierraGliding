  set dataTable [$connection -alias GetSchema DATATYPES]
  set results [list]

  object foreach -alias dataRow [set dataRows [$dataTable -alias Rows]] {
    lappend results [list \
        [$dataRow Item TypeName] [$dataRow Item ProviderDbType]]
  }

  lsort $results
} -cleanup {
  cleanupDb $fileName

  freeDbConnection

